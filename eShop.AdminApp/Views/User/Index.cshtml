@using eShop.ViewModel.Common
@model PagedResult<eShop.ViewModel.System.Users.UserVm>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div style="margin:20px;">
        <h1>Danh sách người dùng</h1>

        <a asp-action="Create" class="btn btn-success btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-plus-circle"></i>
            </span>
            <span class="text">Tạo mới</span>
        </a>
        <br />
        <br />
        <table class="table table-bordered dataTable">
            <thead>
                <tr>
                    <th class="sorting">
                        Id
                    </th>
                    <th class="sorting">
                        Họ
                    </th>
                    <th class="sorting">
                        Tên
                    </th>
                    <th class="sorting">
                        SĐT
                    </th>
                    <th class="sorting">
                        Tên đăng nhập
                    </th>
                    <th class="sorting">
                        Email
                    </th>
                    <th class="sorting">
                        DoB
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dob)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { item.Id }) |
                            @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
